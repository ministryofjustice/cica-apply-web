{
    "name": "cica-web",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start:dev": "nodemon -L --inspect=0.0.0.0:9229 -e .css,.js,.json,.njk --ignore public/dist/ --exec npm run buildRun:dev",
        "start": "node ./bin/www",
        "sass": "node-sass src/sass/all.scss public/stylesheets/all.css && node-sass src/sass/all-ie8.scss public/stylesheets/all-ie8.css",
        "test": "npm run test:node && npm run test:dom",
        "test:dom": "jest --config=jest.config.jsdom.js",
        "test:node": "jest --config=jest.config.js",
        "coverage": "jest --coverage",
        "build:dev": "npm run copy:css && npm run copy:js && webpack --config webpack.config.js --mode development",
        "build": "webpack --config webpack.config.prod.js --mode production --display-error-details",
        "buildRun:dev": "npm run build:dev && node ./bin/www",
        "postinstall": "npm run build",
        "copy:css": "rm -rf public/dist/css && mkdir -p public/dist/css && cp -r ./src/modules/**/*.css public/dist/css/ || :",
        "copy:js": "rm -rf public/dist/js && mkdir -p public/dist/js && cp -r ./src/modules/**/vendor/*.js public/dist/js/ || :"
    },
    "dependencies": {
        "@babel/core": "^7.7.4",
        "@babel/preset-env": "^7.7.4",
        "babel-loader": "^8.0.6",
        "client-sessions": "github:CriminalInjuriesCompensationAuthority/node-client-sessions#v0.9.0",
        "cookie-parser": "~1.4.3",
        "core-js": "^3.5.0",
        "csurf": "^1.10.0",
        "debug": "~2.6.9",
        "express": "~4.16.0",
        "got": "^9.6.0",
        "govuk-frontend": "^3.1.0",
        "helmet": "^3.15.0",
        "lodash.merge": "^4.6.1",
        "moment": "^2.24.0",
        "morgan": "~1.9.0",
        "nunjucks": "^3.1.7",
        "q-transformer": "github:CriminalInjuriesCompensationAuthority/q-transformer.git#v0.7.2",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10"
    },
    "devDependencies": {
        "eslint": "^5.8.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^3.1.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jest": "^22.1.3",
        "eslint-plugin-prettier": "^3.0.0",
        "fs-extra": "^7.0.0",
        "husky": "^1.3.1",
        "jest": "^24.8.0",
        "lint-staged": "^8.0.4",
        "node-sass": "^4.12.0",
        "nodemon": "^1.18.9",
        "prettier": "^1.14.3",
        "q-base-config": "github:CriminalInjuriesCompensationAuthority/q-base-config#semver:<1.0.0",
        "supertest": "^4.0.2"
    },
    "license": "MIT",
    "_m0": {
        "devDependencies": {
            "eslint": "^5.8.0",
            "eslint-config-airbnb-base": "^13.1.0",
            "eslint-config-prettier": "^3.1.0",
