{
    "name": "cica-web",
    "version": "7.5.28",
    "engines": {
        "npm": ">=10.8.2",
        "node": ">=22.8.0"
    },
    "private": true,
    "scripts": {
        "start:dev": "npm run build:dev && nodemon -L --inspect=0.0.0.0:9229 -e .css,.js,.json,.njk --ignore public/dist/ --ignore src/js/scripts.babel.generated.js npm start",
        "start": "node ./bin/www",
        "sass": "sass --style=compressed --no-source-map src/sass/all.scss public/stylesheets/all.css",
        "test": "npm run test:node && npm run test:dom",
        "test:dom": "jest --config=jest.config.jsdom.js",
        "test:node": "jest --config=jest.config.js",
        "coverage": "jest --coverage --coverageReporters=html",
        "build:dev": "npm run copy:css && npm run copy:js && npm run babel && npm run webpack:dev",
        "build": "npm run copy:css && npm run copy:js && npm run babel && npm run webpack",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "buildRun:dev": "node ./bin/www",
        "copy:css": "rm -rf /public/dist/css || true && mkdir -p public/dist/css && cp -r ./src/modules/**/*.css public/dist/css/ && cp -r ./src/modules/**/*.css.map public/dist/css/",
        "copy:js": "rm -rf /public/dist/js || true && mkdir -p public/dist/js && cp -r ./src/modules/**/vendor/*.js public/dist/js/",
        "webpack:dev": "webpack --config webpack.config.js",
        "webpack": "webpack --config webpack.config.prod.js",
        "babel": "babel src/js/scripts.js -o src/js/scripts.babel.generated.js"
    },
    "dependencies": {
        "@ministryofjustice/frontend": "^2.2.5",
        "cookie-parser": "~1.4.3",
        "csurf": "^1.11.0",
        "debug": "~2.6.9",
        "express": "^4.18.2",
        "express-openid-connect": "^2.13.0",
        "got": "^11.8.6",
        "helmet": "^7.0.0",
        "js-cookie": "^2.2.1",
        "lodash.merge": "^4.6.2",
        "moment-timezone": "^0.5.41",
        "morgan": "~1.9.0",
        "nanoid": "^3.3.4",
        "nunjucks": "^3.2.3",
        "q-transformer": "github:CriminalInjuriesCompensationAuthority/q-transformer#v5.4.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.23.0",
        "@babel/core": "^7.23.2",
        "@babel/plugin-transform-runtime": "^7.23.2",
        "@babel/preset-env": "^7.23.2",
        "axios": "^0.21.4",
        "babel-loader": "^9.1.2",
        "core-js": "^3.29.0",
        "custom-event": "^1.0.1",
        "eslint": "^8.35.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-prettier": "^3.4.1",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "jest-fetch-mock": "^3.0.3",
        "lint-staged": "^11.2.6",
        "nodemon": "^2.0.20",
        "prettier": "^1.19.1",
        "sass": "^1.62.1",
        "supertest": "^4.0.2",
        "time-convert": "0.0.2",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "license": "MIT"
}
